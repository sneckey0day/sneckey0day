#include <stdio.h>

struct Process {
    int id;
    int priority;
    int burst_time;
};

int main() {
    int n;
    printf("Enter the number of processes: ");
    scanf("%d", &n);
    
    struct Process processes[n];

    // Input process details
    for (int i = 0; i < n; i++) {
        processes[i].id = i + 1;
        printf("Enter priority and burst time for Process %d: ", i + 1);
        scanf("%d %d", &processes[i].priority, &processes[i].burst_time);
    }

    // Find the process with the highest priority
    int highest_priority = processes[0].priority;
    int highest_priority_index = 0;

    for (int i = 1; i < n; i++) {
        if (processes[i].priority < highest_priority) {
            highest_priority = processes[i].priority;
            highest_priority_index = i;
        }
    }

    // Execute the process with the highest priority
    printf("\nExecuting Process P%d\n", processes[highest_priority_index].id);

    return 0;
}
